pipeline{
    
    agent any


stages{
       stage('clean workspace')
        {
            steps{
                cleanWs()
                 }
        } 
    stage('pulling the code'){
        steps{
            git branch: 'prod',
            url: 'https://github.com/MalekFarhani/AchatSpringBoot'
}}
    stage('build'){
        steps{ 
            sh 'mvn clean package'
}}
 stage('docker'){
        steps{ 
                sh 'docker build . -t malekkkk/achatsp:2.0'   
    
        }}
 stage('docker login'){
        steps {
                withCredentials([string(credentialsId: 'dockerh', variable: 'dockerhubpwd')]) {      
                        sh "echo \$dockerhubpwd | docker login -u malekkkk --password-stdin"
            }}}
   
stage ('docker push'){
        steps{
            sh 'docker push malekkkk/achatsp:2.0'
        }
    }

}}